- const title = 'My Wishlist'
- const loggedin = "Mikheil"
doctype html
html(lang="en")
    head
        link(rel="stylesheet", href="assets/css/swiper-bundle.min.css")
        include ../layouts/_head

    body 
        include ../layouts/_header
        include ../layouts/_loginmodal

        main.main.profilemain.container
            .profilemain__greetings__container
                .profilemain__greetings
                    h6.profilemain__greetings__hello="Hello " + loggedin
                    p.profilemain__greetings__welcome welcome to your dsm account!
                    p.profilemain__greetings__instruction Here you will be able to edit your details, view your order status and update your wishlist.
                .loggedinmenu__balance
                    .loggedinmenu__balance__left
                        .balancesvg
                        .loggedinmenu__balance__left__content
                            p balance
                            .loggedinmenu__balance__price
                                span.loggedinmenu__balance__price__value 30.40
                                |  USD
                    a.loggedinmenu__balance__right(href="payment.html") Payment settings
            .profilemain__nav
                ul.profilemain__nav__ul
                    li.profilemain__nav__ul__li.details
                        a(href="profile-details.html") my details
                    li.profilemain__nav__ul__li.history
                        a(href="profile-orders.html") order history
                    li.profilemain__nav__ul__li.wishlist.active
                        a(href="profile-wishlist.html", data-wishes="13") my wishlist
                    li.profilemain__nav__ul__li.referalls
                        a(href="profile-referrals.html", data-reffs="135") referrals
                a.profilemain__nav__logout(href="/logout") Log out!
            //- here comes changing content
            section.profilemain__mywishlist
                h2.detailforms__title.wishlist(data-wishes="13") My Wishlist
                ul.profilemain__mywishlist__ul
                    each slide, index in slides
                        li.profilemain__mywishlist__li
                            .profilemain__mywishlist__li__imgbox
                                img(src=slide.image, alt="")
                            .profilemain__mywishlist__li__info
                                .profilemain__mywishlist__li__header
                                    .profilemain__mywishlist__li__header__left
                                        h3=slide.title
                                        .profilemain__mywishlist__li__expiresin Expires in 60 days(s)
                                    .profilemain__mywishlist__li__header__right
                                        .homemain__populars__slide__price
                                            span.homemain__populars__slide__price__discount 24.3 USD
                                            span.homemain__populars__slide__price__current
                                                span 20.3
                                                |  USD
                                        .profilemain__mywishlist__li__instock(data-instock=(slide.sp ? 'green' : 'red')) in stock
                                form.profilemain__mywishlist__li__updateform
                                    .formsec
                                        .formsec__title milligrams
                                        .productinmain__info__radio.milligrams
                                            label(for=`milligram1${index}`)
                                                input(id=`milligram1${index}`, type="radio", name="milligram", value="1", checked)
                                                .activecheckbox 0.5 ml
                                            label(for=`milligram2${index}`)
                                                input(id=`milligram2${index}`, type="radio", name="milligram", value="2")
                                                .activecheckbox 1 ml
                                            label(for=`milligram3${index}`)
                                                input(id=`milligram3${index}`, type="radio", name="milligram", value="3")
                                                .activecheckbox 5 ml
                                    .formsec
                                        .formsec__title colors
                                        .productinmain__info__radio.colors
                                            label(for=`color1${index}`)
                                                input(id=`color1${index}`,type="radio", name="color", value="1", checked)
                                                .activecheckbox(style="background-color: #B7C88E")
                                            label(for=`color2${index}`)
                                                input(id=`color2${index}`,type="radio", name="color", value="2")
                                                .activecheckbox(style="background-color: #FDF8E8")
                                            label(for=`color3${index}`)
                                                input(id=`color3${index}`,type="radio", name="color", value="3")
                                                .activecheckbox(style="background-color: #131313")
                                    .formsec.formsec_qty(data-id=index+1)
                                        .formsec__title quantity
                                        .productinmain__info__basketform__quantity
                                            .productinmain__info__basketform__quantity__minusbtn.minus_quantity_in_wishlist.inactive
                                                include ../components/basketminus
                                            input.inputquantity_in_wishlist(type="number", name="quantity", value="1", min="0", max="1000", step="1")
                                            .productinmain__info__basketform__quantity__plusbtn.plus_quantity_in_wishlist
                                                include ../components/basketplus

                                    .profilemain__mywishlist__li__updateform__btns
                                        button.yellowbtn(type="submit") add in basket
                                        a.profilemain__mywishlist__li__updateform__btns__rmv(href="/remove")
                                            include ../components/reviewx
        include ../layouts/_basket
        include ../layouts/_footer
        
        include ../layouts/_respomenu
        
        include ../layouts/_scripts
        script(src="assets/js/profile.js") 