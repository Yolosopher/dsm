                .homemain__populars__slider
                    .homemain__populars__swiper.swiper-container
                        .homemain__populars__wrapper.swiper-wrapper
                            each slide, index in slides
                                .homemain__populars__slide.swiper-slide
                                    a.homemain__populars__slide__imgbox(href=slide.link) 
                                        img(src=slide.image, alt=slide.name)
                                    .homemain__populars__slide__textcontent
                                        p.homemain__populars__slide__category= slide.category
                                        h4.homemain__populars__slide__title
                                            a(href=slide.link)= slide.title
                                        h4.homemain__populars__slide__price
                                            span.homemain__populars__slide__price__discount=`${slide.price} USD`
                                            span.homemain__populars__slide__price__current
                                                    span=slide.price
                                                    |  USD
                                        .homemain__populars__slide__btns
                                            .addtobag.addinbasketbtn(data-id=slide.id)
                                                include ../components/bag
                                                .flip
                                                    span.add add to bag
                                                    span.remove remove
                                            .homemain__populars__slide__btns__hr
                                            .addtofav(data-id=slide.id)
                                                include ../components/heart
                                            .addtocompare(data-id=slide.id)
                                                include ../components/smth

