            .homemain__slider.fadein.fadeinimg
                .homemain__swiper.left.swiper-container
                    .homemain__wrapper.swiper-wrapper.animstartpoint
                        each slide, index in slides
                            .homemain__slide.swiper-slide.starting
                                .homemain__slide__left
                                    .homemain__slide__left__category__container
                                        p.homemain__slide__left__category= slide.category
                                    .homemain__slide__left__title__container
                                        h2.homemain__slide__left__title= slide.title
                                    .homemain__slide__left__priceNreview__container
                                        .homemain__slide__left__priceNreview
                                            .homemain__slide__left__price
                                                span= slide.price
                                                span= ' USD'
                                            .homemain__slide__left__reviews
                                                .homemain__slide__left__reviews__stars(style=`--multix: ${slide.review};`)
                                                span.homemain__slide__left__review__qty= `(${slide.review_qty} reviews)`
                                    .homemain__slide__left__textboxNlink
                                        .homemain__slide__left__textbox
                                            p=slide.text
                                        a.homemain__slide__left__link(href=slide.link) view product

                    .homemain__navpag
                        .homemain__navigation
                            .homemain__navigation__left
                            .homemain__navigation__right
                        .homemain__navpag__hr
                        .homemain__pagination
                
                .homemain__swiper.right.swiper-container
                    .homemain__wrapper.swiper-wrapper   
                        each slide, index in slides
                            .homemain__slide.swiper-slide.starting
                                .homemain__slide__right(data-sp=slide.sp ? '1' : '0')
                                    .homemain__slide__right__imgbox
                                        img(src=slide.image, alt=slide.title)
            .homemain__categories
                .homemain__categories__headings
                    h3.ptitle Categories
                    a.viewallprods(href="/products") view all products
                ul.homemain__categories__list
                    each cat, index in categories
                        li.homemain__categories__item
                            .homemain__categories__item__imgbox
                                img(src=cat.image, alt=cat.title)
                            .homemain__categories__item__textcontent
                                h4.homemain__categories__item__title
                                    a(href="#")= cat.title
                                p
                                    span=cat.qty
                                    |  products
                                a.homemain__categories__item__link(href="basket.html") shop now
                    li.homemain__categories__item.promotions
                        .homemain__categories__item__textcontent
                            h4.homemain__categories__item__title
                                a(href="product.html") promotions
            .homemain__populars
                .homemain__categories__headings
                    h3.ptitle Popular products
                    .homemain__populars__navigation
                        .homemain__populars__navigation__left
                            include ../components/popularsnavleft
                        .homemain__populars__navigation__right
