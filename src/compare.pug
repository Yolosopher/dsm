	const getRndInteger = (min, max) => {
		return Math.floor(Math.random() * (max - min) ) + min;
	}
-
	const getRandomColor = () => {
		return `rgba(${getRndInteger(0, 255)}, ${getRndInteger(0, 255)}, ${getRndInteger(0, 255)})`
	}
