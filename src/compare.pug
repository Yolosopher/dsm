	const getRandomMilligram = () => {
		let randomnum = Math.random()
		if (randomnum < .255) {
			return ".5 ML"
		} else if (randomnum < .555) {
			return "1 ML"
		} else if (randomnum < .755) {
			return "3 ML"
		} else {
			return "5 ML"
		}
	}
